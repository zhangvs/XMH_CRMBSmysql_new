        //执行存储过程
        public bool ExecuteSqlTran(List<string> sqlLst, out string msg)
        {
            try
            {
                int count = DbHelperMySQL.ExecuteSqlTran(sqlLst);
                if (count > 0)
                {
                    msg = "执行成功";
                    return true;

                }
                else
                {
                    msg = "执行失败";
                    return false;
                }
            }
            catch (Exception e)
            {
                msg = e.ToString();
                return false;
            }

        }

