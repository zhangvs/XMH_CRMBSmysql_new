        public List<XHD.Model.ssn_art_menu> DataTableToList(DataTable dt)
        {
            List<XHD.Model.ssn_art_menu> modelList = new List<XHD.Model.ssn_art_menu>();
            int rowsCount = dt.Rows.Count;
            if (rowsCount > 0)
            {
                XHD.Model.ssn_art_menu model;
                for (int n = 0; n < rowsCount; n++)
                {
                    model = dal.DataRowToModel(dt.Rows[n]);
                    if (model != null)
                    {
                        modelList.Add(model);
                    }
                }
            }
            return modelList;
        }

